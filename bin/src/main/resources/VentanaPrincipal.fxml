<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="VBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
         prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10" VBox.vgrow="ALWAYS">
            <Label text="Invoice #:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="invoiceNumber" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="PO:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="purchaseOrderNumber" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Packing Slip:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="packingSlip" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="Number of Boxes:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="numberOfBoxes" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Carrier:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="carrier" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Incoterm:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="incoterm" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            <Label text="Weight:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="weight" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            <Button fx:id="generaButton" text="Generar PDF" GridPane.columnIndex="0" GridPane.rowIndex="7"/>

            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
            </rowConstraints>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </GridPane>
    </children>
</fx:root>
